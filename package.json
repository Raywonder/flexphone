{
  "name": "flexphone",
  "version": "1.0.0",
  "description": "FlexPhone - Lightweight SIP Client for iOS and Desktop (Official Production Version)",
  "main": "src/main.js",
  "homepage": ".",
  "author": {
    "name": "FlexPBX Team",
    "email": "support@flexpbx.com"
  },
  "license": "MIT",
  "keywords": [
    "sip",
    "voip",
    "phone",
    "sms",
    "callcentric",
    "flexpbx",
    "ios",
    "mobile"
  ],
  "scripts": {
    "start": "cross-env NODE_ENV=production electron .",
    "dev": "cross-env NODE_ENV=development electron . --dev",
    "start:dev": "cross-env NODE_ENV=development electron .",
    "build": "cross-env NODE_ENV=production electron-builder",
    "build-prod": "cross-env NODE_ENV=production electron-builder --config electron-builder-prod.js",
    "build-mac": "cross-env NODE_ENV=production electron-builder --mac",
    "build-win": "cross-env NODE_ENV=production electron-builder --win",
    "build-linux": "cross-env NODE_ENV=production electron-builder --linux",
    "build-ios": "npx react-native run-ios",
    "build-android": "npx react-native run-android",
    "pack": "electron-builder --dir",
    "pack-prod": "cross-env NODE_ENV=production electron-builder --dir",
    "test": "cross-env NODE_ENV=production node test/FlexPhone-Test.js",
    "test:prod": "cross-env NODE_ENV=production npm test",
    "lint": "eslint src/",
    "clean": "rm -rf dist/ build/",
    "clean-prod": "rm -rf dist/ build/ ../FlexPhone-Releases/Production/*",
    "release-prod": "npm run clean-prod && npm run build-prod && cp -r dist/* ../FlexPhone-Releases/Production/",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "express": "^4.19.2",
    "howler": "^2.2.4",
    "keytar": "^7.9.0",
    "sip.js": "^0.21.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@react-native-community/cli": "^13.6.6",
    "@react-native-community/cli-platform-ios": "^13.6.6",
    "cross-env": "^7.0.3",
    "dmg-license": "^1.0.11",
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "metro-react-native-babel-preset": "^0.77.0"
  },
  "build": {
    "appId": "com.flexpbx.flexphone",
    "productName": "FlexPhone",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.business"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Network"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flexpbx/flexphone.git"
  },
  "bugs": {
    "url": "https://github.com/flexpbx/flexphone/issues"
  }
}
