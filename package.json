{
  "name": "flexphone",
  "version": "1.0.0",
  "description": "FlexPhone - Standalone SIP Client with FlexPBX Integration",
  "main": "src/main.js",
  "homepage": "https://github.com/Raywonder/flexphone",
  "author": "Raywonder <git@devine-creations.com>",
  "license": "MIT",
  "keywords": [
    "sip",
    "voip",
    "phone",
    "flexpbx",
    "accessibility",
    "electron",
    "desktop"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "test": "echo \"FlexPhone tests not implemented yet\"",
    "lint": "eslint src/",
    "clean": "rm -rf dist/ build/"
  },
  "dependencies": {
    "sip.js": "^0.21.2",
    "electron-store": "^8.1.0",
    "howler": "^2.2.4"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0"
  },
  "build": {
    "appId": "com.devinecreations.flexphone",
    "productName": "FlexPhone",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.business"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Network"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Raywonder/flexphone.git"
  },
  "type": "commonjs"
}
