# ðŸš€ FlexPhone Production Environment Configuration
# This file contains production-specific settings for FlexPhone

# Environment Type
NODE_ENV=production
ELECTRON_ENV=production
FLEXPHONE_VERSION=official

# Debug Settings
DEBUG=false
VERBOSE_LOGGING=false
ELECTRON_DEV_TOOLS=false

# SIP Configuration (Production Server)
SIP_SERVER_HOST=sip.flexpbx.com
SIP_SERVER_PORT=5060
SIP_WEBSOCKET_HOST=ws.flexpbx.com
SIP_WEBSOCKET_PORT=443
SIP_PROXY_HOST=proxy.flexpbx.com
SIP_PROXY_PORT=5060

# WebSocket SIP Gateway
WEBSOCKET_SIP_GATEWAY_URL=wss://ws.flexpbx.com/ws
WEBSOCKET_SIP_GATEWAY_SECURE_URL=wss://ws.flexpbx.com/ws

# FlexPBX API Configuration (Production)
FLEXPBX_API_URL=https://api.flexpbx.com/v1
FLEXPBX_API_VERSION=v1
FLEXPBX_API_TIMEOUT=30000

# Audio Configuration
AUDIO_CODEC_PRIORITY=OPUS,G722,PCMU,PCMA
AUDIO_SAMPLE_RATE=48000
AUDIO_CHANNELS=1
AUDIO_BITRATE=128000

# Production Features
ENABLE_HOT_RELOAD=false
ENABLE_MOCK_CALLS=false
ENABLE_AUDIO_TESTING=false
ENABLE_SIP_SIMULATION=false
ENABLE_DTMF_TESTING=false

# Security (Production)
DISABLE_SSL_VERIFICATION=false
ALLOW_SELF_SIGNED_CERTS=false
ENFORCE_TLS=true
REQUIRE_CERTIFICATE_VALIDATION=true

# Default Configuration
DEFAULT_SIP_DOMAIN=flexpbx.com
DEFAULT_SIP_TRANSPORT=WSS
DEFAULT_AUDIO_CODEC=OPUS

# Build Configuration
BUILD_TARGET=production
BUNDLE_ID=com.flexpbx.flexphone
APP_NAME=FlexPhone
ICON_NAME=icon.icns

# Performance Settings
MEMORY_LIMIT=256MB
CPU_PRIORITY=low
GARBAGE_COLLECTION=conservative

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_CRASH_REPORTING=true
ANALYTICS_ENABLED=true
TELEMETRY_ENDPOINT=https://telemetry.flexpbx.com

# Update Configuration
AUTO_UPDATE_ENABLED=true
UPDATE_SERVER_URL=https://updates.flexpbx.com
UPDATE_CHECK_INTERVAL=86400000

# File Paths
CONFIG_DIR=./config/production
LOGS_DIR=./logs/production
CACHE_DIR=./cache/production

# Error Handling
ERROR_REPORTING_URL=https://errors.flexpbx.com
CRASH_DUMP_UPLOAD=true

# License and Compliance
LICENSE_SERVER_URL=https://license.flexpbx.com
COMPLIANCE_MODE=strict

# Quality Assurance
ENABLE_USAGE_STATISTICS=true
ENABLE_QUALITY_METRICS=true
QUALITY_REPORTING_INTERVAL=3600000