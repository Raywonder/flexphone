# ðŸ”§ FlexPhone Development Environment Configuration
# This file contains development-specific settings for FlexPhone

# Environment Type
NODE_ENV=development
ELECTRON_ENV=development
FLEXPHONE_VERSION=development

# Debug Settings
DEBUG=true
VERBOSE_LOGGING=true
ELECTRON_DEV_TOOLS=true

# SIP Configuration (Development Test Server)
SIP_SERVER_HOST=127.0.0.1
SIP_SERVER_PORT=5070
SIP_WEBSOCKET_HOST=127.0.0.1
SIP_WEBSOCKET_PORT=8089
SIP_PROXY_HOST=127.0.0.1
SIP_PROXY_PORT=5060

# WebSocket SIP Gateway
WEBSOCKET_SIP_GATEWAY_URL=ws://127.0.0.1:8089/ws
WEBSOCKET_SIP_GATEWAY_SECURE_URL=wss://127.0.0.1:8089/ws

# FlexPBX API Configuration (Development)
FLEXPBX_API_URL=http://127.0.0.1:3000/api
FLEXPBX_API_VERSION=v1
FLEXPBX_API_TIMEOUT=10000

# Audio Configuration
AUDIO_CODEC_PRIORITY=OPUS,G722,PCMU,PCMA
AUDIO_SAMPLE_RATE=48000
AUDIO_CHANNELS=1
AUDIO_BITRATE=64000

# Development Features
ENABLE_HOT_RELOAD=true
ENABLE_MOCK_CALLS=true
ENABLE_AUDIO_TESTING=true
ENABLE_SIP_SIMULATION=false
ENABLE_DTMF_TESTING=true

# Security (Development)
DISABLE_SSL_VERIFICATION=true
ALLOW_SELF_SIGNED_CERTS=true

# Testing Configuration
TEST_EXTENSION_1=1001
TEST_EXTENSION_2=1002
TEST_SIP_DOMAIN=flexpbx.local
TEST_SIP_USERNAME=test_user
TEST_SIP_PASSWORD=test_pass

# Build Configuration
BUILD_TARGET=development
BUNDLE_ID=com.flexpbx.flexphone.dev
APP_NAME=FlexPhone Dev
ICON_NAME=icon-dev.icns

# Performance Settings
MEMORY_LIMIT=512MB
CPU_PRIORITY=normal
GARBAGE_COLLECTION=aggressive

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_CRASH_REPORTING=false
ANALYTICS_ENABLED=false

# File Paths
CONFIG_DIR=./config/development
LOGS_DIR=./logs/development
CACHE_DIR=./cache/development